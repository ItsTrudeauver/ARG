        .terminal {
            white-space: pre-wrap;
            text-shadow: 0 0 3px #8f82;
            position: relative;
        }
        .progress-bar {
            width: 100%;
            height: 3px;
            background: #000;
            margin: 1em 0;
            border: 1px solid #0f0;
        }
        .progress-fill {
            height: 100%;
            background: #0f0;
            width: 87%;
            animation: pulse 3s infinite;
        }
        @keyframes pulse {
            0%, 100% { opacity: 0.3; }
            50% { opacity: 0.8; }
        }
        .button {
            background: #000;
            border: 1px solid #0f0;
            color: #0f0;
            padding: 10px 25px;
            cursor: pointer;
            margin: 2em auto;
            display: block;
            transition: all 0.3s;
        }
        .button:hover {
            background: #0f03;
            text-shadow: 0 0 10px #8f8;
        }
        .crt-effect {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: repeating-linear-gradient(
                0deg,
                rgba(0, 255, 0, 0.06) 0px,
                rgba(0, 255, 0, 0.06) 1px,
                transparent 1px,
                transparent 3px
            );
            pointer-events: none;
            z-index: 999;
        }
        @keyframes textGlitch {
            0%, 99% { opacity: 0.98; }
            2% { transform: translateX(3px); }
            5% { letter-spacing: -0.1em; }
            50% { opacity: 0.7; }
        }
        .hidden-cursor {
            animation: blink 1.2s infinite;
            font-weight: bold;
        }
        @keyframes blink {
            50% { opacity: 0; }
        }
    </style>
