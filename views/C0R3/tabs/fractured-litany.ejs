<!DOCTYPE html>  
<html lang="en-US">  
<head>  
    <meta charset="UTF-8">  
    <title>///FRACTURED_LITANY</title>  
    <style>  

.tab-rail {
            position: fixed;
            left: -200px;
            top: 0;
            height: 100vh;
            width: 200px;
            background: #000;
            border-right: 1px solid rgba(0, 255, 0, 0.1);
            transition: 0.3s;
            z-index: 1000;
        }
.tab-handle {
            position: absolute;
            right: -40px;
            top: 50%;
            transform: translateY(-50%);
            width: 40px;
            height: 80px;
            background: #000;
            border: 1px solid rgba(0, 255, 0, 0.1);
            border-left: none;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5em;
            z-index: 1100;
        }


        .tab-container {
            padding: 20px 10px;
            height: 100%;
        }


        .tab-item {
            padding: 12px;
            margin: 8px 0;
            border: 1px solid rgba(0, 255, 0, 0.1);
            cursor: pointer;
            transition: 0.2s all;
            font-size: 0.9rem;
            background: rgba(0, 255, 0, 0.02);
        }


        .tab-item.active {
            border-color: #0f0;
            background: rgba(0, 255, 0, 0.1);
        }
.menu-tab {
            background: #000;
            border: 1px solid #0f03;
            padding: 4px 8px;
            cursor: pointer;
            transition: 0.3s all;
            overflow: hidden;
            width: 40px;
            white-space: nowrap;
        }


        .menu-tab:hover {
            width: 120px;
            border-color: #0f0;
            background: #002200;
        }


        .menu-tab:hover ~ .menu-tab {
            margin-left: -30px;
        }

   
        body {  
    background: #000;  
    color: #0f0;  
    font-family: 'Courier New', monospace;  
    margin: 0; /* Remove left margin */
    padding: 2em;
    overflow: auto;  
    overflow-x: hidden; /* Block horizontal scroll */
}
.container {  
    max-width: 800px;  
    margin: 0 auto;     /* Center horizontally */
    border: 1px dashed #0f0;  
    padding: 2em;  
    position: relative;
    left: 0;            /* Explicitly reset positioning */
}
        .litany {  
            white-space: pre-wrap;  
            margin: 1em 0;  
            opacity: 0.9;  
        }  
        .flicker {  
            animation: flicker 0.1s infinite;  
        }  
        @keyframes flicker {  
            0% { opacity: 1; }  
            50% { opacity: 0.3; }  
            100% { opacity: 1; }  
        }  
        .button {  
            background: #000;  
            border: 1px solid #0f0;  
            color: #0f0;  
            padding: 10px;  
            cursor: pointer;  
            margin: 2em 0;  
        }  
        .redact {  
            background: #0f0;  
            color: #000;  
        }  
    </style>  
</head>  
<body>
    <script>
        let tabsVisible = false;
        
        function toggleTabs() {
            const rail = document.querySelector('.tab-rail');
            const handle = document.querySelector('.tab-handle');
            tabsVisible = !tabsVisible;
            rail.style.left = tabsVisible ? '0' : '-200px';
            handle.innerHTML = tabsVisible ? '◀' : '▶';
        }
            </script>
    <div class="tab-rail">
